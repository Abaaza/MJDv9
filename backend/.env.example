# Server Configuration
NODE_ENV=development
PORT=5000

# AWS Configuration
AWS_REGION=us-east-1
AWS_S3_BUCKET=mjd-boq-uploads-prod
# For local development only (not needed in Lambda)
# AWS_ACCESS_KEY_ID=your-access-key-here
# AWS_SECRET_ACCESS_KEY=your-secret-key-here

# Convex Database
CONVEX_URL=https://good-dolphin-454.convex.cloud

# JWT Configuration
JWT_ACCESS_SECRET=your_jwt_access_secret_here
JWT_REFRESH_SECRET=your_jwt_refresh_secret_here
JWT_ACCESS_EXPIRY=15m
JWT_REFRESH_EXPIRY=7d

# AI Service Keys (will be stored in DB for production)
COHERE_API_KEY=your_cohere_api_key_here
OPENAI_API_KEY=your_openai_api_key_here

# File Upload
MAX_FILE_SIZE=50MB
UPLOAD_DIR=uploads

# Vercel Blob Storage (optional - uses local storage if not provided)
BLOB_READ_WRITE_TOKEN=your_vercel_blob_token_here

# Frontend URL
FRONTEND_URL=http://localhost:5173

# Cookie Configuration
COOKIE_SECURE=false
COOKIE_HTTPONLY=true
COOKIE_SAMESITE=lax

# Performance Configuration
MAX_ITEMS_PER_JOB=10000
MAX_CONCURRENT_MATCHES=10
ITEM_PROCESSING_TIMEOUT=5000
BATCH_PROCESSING_DELAY=100
ADAPTIVE_BATCH_SIZE=true
MIN_BATCH_SIZE=5
MAX_BATCH_SIZE=20
ENABLE_DETAILED_LOGGING=true

# Matching Limits
MAX_RETURNED_MATCHES=5
MAX_CONTEXT_HEADERS=10
MAX_DESCRIPTION_LENGTH=500