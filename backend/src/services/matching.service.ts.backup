            method: 'COHERE'
          },
          categoryBonus
        });
      } catch (error) {
        console.log('Cohere match failed:', error);
      }
    }

    // Try OpenAI with category-aware query
    if (this.openaiClient) {
      try {
        const enhancedDescription = description + categoryContext;
