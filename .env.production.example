# Backend Environment Variables
NODE_ENV=production
PORT=5003

# JWT Configuration
JWT_SECRET=your-secure-jwt-secret-here
JWT_REFRESH_SECRET=your-secure-jwt-refresh-secret-here

# Convex Configuration
CONVEX_URL=https://your-convex-instance.convex.cloud
NEXT_PUBLIC_CONVEX_URL=https://your-convex-instance.convex.cloud

# AI API Keys
COHERE_API_KEY=your-cohere-api-key
OPENAI_API_KEY=your-openai-api-key

# CORS Configuration
ALLOWED_ORIGINS=https://your-domain.vercel.app,https://your-custom-domain.com

# File Upload Configuration
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=.xlsx,.xls

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Frontend Environment Variables (in frontend/.env)
VITE_API_URL=https://your-domain.vercel.app/api
VITE_CONVEX_URL=https://your-convex-instance.convex.cloud